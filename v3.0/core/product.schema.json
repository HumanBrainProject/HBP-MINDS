{
  "$id": "https://schema.hbp.eu/minds3.0/core/product.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Product description?",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "alias",
    "name",
    "summary",
    "hasVersions",
    "contributions",
    "conceptID"
  ],
  "properties": {
    "alias": {
      "type": "string",
      "description": "User-defined identifier of this product.",
      "maxLength": 30
    },
    "name": {
      "type": "string",
      "description": "Full name that describes this product (max. 110 characters).",
      "maxLength": 110
    },
    "summary": {
      "type": "string",
      "description": "Short description that summarizes this product (max. 200 words; no references)."
    },
    "homepage": {
      "type": "string",
      "format": "iri",
      "description": "The international resource identifier (IRI) to the homepage of the product."
    },
    "hasVersions": {
      "type": "array",
      "description": "Link to released version(s) of this product.",
      "items": {
        "oneOf": [
          {"$ref": "https://schema.hbp.eu/minds3.0/core/datasetVersion.schema.json"},
          {"$ref": "https://schema.hbp.eu/minds3.0/core/modelVersion.schema.json"},
          {"$ref": "https://schema.hbp.eu/minds3.0/core/softwareVersion.schema.json"}
        ]
      }
    },
    "contributions": {
      "type": "array",
      "description": "List of persons that were involved in the creation/publication of this product.",
      "items": {
        "$ref": "https://schema.hbp.eu/minds3.0/options/contributions.schema.json"
      }
    },
    "conceptID": {
      "description": "A global identifier for the product.",
      "oneOf": [
        {"$ref": "https://schema.hbp.eu/minds3.0/core/project.schema.json"}
      ]
    }
  }
}
