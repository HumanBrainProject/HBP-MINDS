{
  "$id": "https://schema.hbp.eu/minds3.0/core/product.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Product description?",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "@type",
    "@id",
    "alias",
    "name",
    "summary",
    "hasVersions",
    "contributions",
    "conceptID"
  ],
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://schema.ebrains/openminds/Product"
    },
    "@id": {
      "type": "string",
      "description": "Metadata node identifier.",
      "pattern": "???"
    },
    "alias": {
      "type": "string",
      "description": "User-defined identifier of this product.",
      "maxLength": 30
    },
    "name": {
      "type": "string",
      "description": "Full name that describes this product (max. 110 characters).",
      "maxLength": 110
    },
    "summary": {
      "type": "string",
      "description": "Short description that summarizes this product (max. 200 words; no references)."
    },
    "homepage": {
      "type": "string",
      "format": "iri",
      "description": "The international resource identifier (IRI) to the homepage of the product."
    },
    "hasVersions": {
      "type": "array",
      "description": "Link to released version(s) of this product.",
      "items": {
        "oneOf": [
          {"$ref": "https://raw.githubusercontent.com/HumanBrainProject/openMINDS/master/v3.0/definitions.json#definitions/CORE_DATASETVERSION"},
          {"$ref": "https://raw.githubusercontent.com/HumanBrainProject/openMINDS/master/v3.0/definitions.json#definitions/CORE_MODELVERSION"},
          {"$ref": "https://raw.githubusercontent.com/HumanBrainProject/openMINDS/master/v3.0/definitions.json#definitions/CORE_SOFTWAREVERSION"}
        ]
      }
    },
    "contributions": {
      "type": "array",
      "description": "List of persons that were involved in the creation/publication of this product.",
      "items": {
        "$ref": "https://raw.githubusercontent.com/HumanBrainProject/openMINDS/master/v3.0/definitions.json#definitions/OPTIONS_CONTRIBUTIONS"
      }
    },
    "conceptID": {
      "description": "A global identifier for the product.",
      "oneOf": [
        {"$ref": "https://raw.githubusercontent.com/HumanBrainProject/openMINDS/master/v3.0/definitions.json#definitions/OPTIONS_GLOBALID"}
      ]
    }
  }
}
