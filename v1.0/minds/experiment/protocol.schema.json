{
  "$id": "https://schema.hbp.eu/minds/experiment/protocol.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information describing a experiment protocol.",
  "type": "object",  
  "additionalProperties": false,
  "required": [
    "@type",
    "@id",
    "name"
  ],
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://schema.hbp/minds/Protocol"
    },
    "@id": {
      "type": "string",
      "description": "Metadata node identifier.",
      "pattern": "minds/experiment/protocol/v1.0.0/([A-Za-z0-9_-]+).json"
    },
    "name": {
      "type": "string",
      "description": "Name of this experiment protocol."
    }
  }
}
