{
  "$id": "https://schema.hbp.eu/minds/core/modality.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information describing a modality.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "@type",
    "@id",
    "name"
  ],
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://schema.hbp/minds/Modality"
    },
    "@id": {
      "type": "string",
      "description": "Metadata node identifier.",
      "pattern": "minds/core/modality/v1.0.0/([A-Za-z0-9_-]+).json"
    },
    "name": {
      "type": "string",
      "description": "Name of this modality.",
      "enum": [
        "expression",
        "genomics",
        "cell culture",
        "histology",
        "morphology",
        "cell morphology",
        "transcriptomics",
        "electrophysiology",
        "cell population characterization",
        "radiology",
        "microscopy",
        "physiology",
        "multimodal",
        "anatomy",
        "optical",
        "cell counting",
        "connectivity",
        "spatial transcriptomics",
        "expression characterization",
        "epigenomics",
        "behavioral",
        "models"
      ]
    }
  }
}
