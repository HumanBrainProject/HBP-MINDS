      "_linkedTypes": [
        "https://openminds.ebrains.eu/core/ContentType"
      ]
    },
    "hasComponent": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "_instruction": "Add all model versions that complement this model version.",
